@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdfs1: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<http://example.com/base/TriplesMap1/shape> a sh:NodeShape ;
    sh:and ( [ sh:nodeKind sh:IRI ;
                sh:path <http://example.com/ontology/practises> ;
                sh:pattern "http://example.com/resource/sport_.*" ] [ sh:node <http://example.com/base/TriplesMap2/shape> ] ),
        ( [ sh:nodeKind sh:IRI ;
                sh:path <http://example.com/ontology/practises> ;
                sh:pattern "http://example.com/resource/sport_.*" ] [ sh:node <http://example.com/base/TriplesMap2/shape> ] ) ;
    sh:property [ sh:nodeKind sh:Literal ;
            sh:path foaf:name ],
        [ sh:path <http://example.com/ontology/practises> ] ;
    sh:targetClass <http://example.com/ontology/Student>,
        <http://www.w3.org/2002/07/owl#Thing> ;
    sh:targetSubjectsOf <http://example.com/ontology/practises>,
        foaf:name .

<http://example.com/base/TriplesMap2/shape> a sh:NodeShape ;
    sh:property [ sh:nodeKind sh:Literal ;
            sh:path rdfs:label ] ;
    sh:targetClass <http://example.com/ontology/Sport>,
        rdfs:Resource ;
    sh:targetSubjectsOf rdfs:label .

