@prefix activity: <http://example.com/activity/> .
@prefix ex: <http://example.com/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<http://example.com/TriplesMap1/shape> a sh:NodeShape ;
    sh:property [ sh:nodeKind sh:Literal ;
            sh:path foaf:name ],
        [ sh:nodeKind sh:Literal ;
            sh:path ex:id ],
        [ sh:node <http://example.com/TriplesMap2/shape> ;
            sh:path ex:Sport ] ;
    sh:targetClass rdfs:Resource,
        <http://www.w3.org/2002/07/owl#Thing>,
        foaf:Person ;
    sh:targetSubjectsOf ex:Sport,
        ex:id,
        foaf:name .

<http://example.com/TriplesMap2/shape> a sh:NodeShape ;
    sh:nodeKind sh:IRI ;
    sh:pattern "http://example.com/.*" ;
    sh:targetClass activity:Sport,
        rdfs:Resource .

